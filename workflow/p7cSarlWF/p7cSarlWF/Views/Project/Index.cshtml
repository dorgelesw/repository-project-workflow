@model IEnumerable<p7cSarlWF.Models.Project>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>
                @Resources.Resources.ProjectManageTitle
            </h3>
        </div>
        <div class="title_right">
            @Html.Partial("_Search")
        </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>@Resources.Resources.ProjectManageProjectList</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i> @Resources.Resources.OptionsMenu</a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    @Html.ActionLink(@Resources.Resources.ProjectManageCreateProject, "Create")
                                </li>
                            </ul> 
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    
                    <table class="table table-striped projects">
                        <thead>
                            <tr>
                                <th style="width: 1%">#</th>
                                <th style="width: 1%">Priorité</th>
                                <th style="width: 20%">Nom du projet</th>
                                <th>Dates butoires</th>
                                <th>Membres</th>
                                <th>Progression</th>
                                <th>Statut</th>
                                <th style="width: 20%">#Edit</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td bgcolor="@item.ColorIdentifier"></td>
                                    <td>@Html.DisplayFor(modelItem => item.PriorityID)</td>
                                    <td >
                                        <a>@Html.DisplayFor(modelItem => item.ProjectShortName)</a>
                                        <br />
                                        <small>Créé le @Html.Raw(item.CreatedAt.ToString("dd MMMM yyyy"))</small>
                                    </td>
                                    <td>
                                        Du<small> @Html.Raw(item.StartDate.ToString("dd MMMM yyyy"))</small>
                                        <br />
                                        Au<small> @Html.Raw(item.EndDate.ToString("dd MMMM yyyy"))</small>
                                    </td>
                                    <td>
                                        <ul class="list-inline">
                                            <li>
                                                <img src="http://localhost/personal/njoroge/assets3/img.jpg" class="avatar" alt="Avatar 1">
                                            </li>
                                            <li>
                                                <img src="http://localhost/personal/njoroge/assets3/img.jpg" class="avatar" alt="Avatar 2">
                                            </li>
                                            <li>
                                                <img src="http://localhost/personal/njoroge/assets3/img.jpg" class="avatar" alt="Avatar 3">
                                            </li>
                                            <li>
                                                <img src="http://localhost/personal/njoroge/assets3/img.jpg" class="avatar" alt="Avatar 4">
                                            </li>
                                            <li>
                                                <img src="http://localhost/personal/njoroge/assets3/img.jpg" class="avatar" alt="...">
                                            </li>
                                        </ul>
                                    </td>
                                    <td class="project_progress">
                                        <div class="progress progress_sm">
                                            <div class="progress-bar bg-green" role="progressbar" data-transitiongoal="10"></div>
                                        </div>
                                        <small>10% de progression</small>
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-success btn-xs">Actif</button>
                                    </td>
                                    <td>
                                        <a href="#" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> Détails </a>
                                        <a href='@Url.Action("Edit", new { id = item.ProjectID })' class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                                        <a href='@Url.Action("Delete", new { id = item.ProjectID })' class="btn btn-danger btn-xs delete"><i class="fa fa-trash-o"></i> Delete </a>
                                    </td>
                                </tr>
                            }




                        </tbody>
                    </table>
                    <!-- end project list -->
                </div>
            </div>
        </div>
    </div>
</div>

