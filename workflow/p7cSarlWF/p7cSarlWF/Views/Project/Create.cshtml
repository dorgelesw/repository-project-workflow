                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.DropDownListFor(model => model.ClientID, new SelectList(@clients, "UtilisateurID", "FirstName", "Choisir le client"), new { @class = "form-control col-md-7 col-xs-12 required", required="required" })
