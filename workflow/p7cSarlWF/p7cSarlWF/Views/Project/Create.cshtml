<script>
    autosize($('.resizable_textarea'));
    $(document).ready(function () {

        $(".select_civilite").select2({
            placeholder: "Choisir la civilité",
            allowClear: true
        });
    });
    function getFormData($form) {
        var unindexed_array = $form.serializeArray();
        var indexed_array = {};
        $.map(unindexed_array, function (n, i) {
            indexed_array[n['name']] = n['value'];
        });
        return indexed_array;
    }
</script>



<script>
    // initialize the validator function
    validator.message['date'] = 'not a real date';
    // validate a field on "blur" event, a 'select' on 'change' event & a '.reuired' classed multifield on 'keyup':
    $('form')
        .on('blur', 'input[required], input.optional, select.required', validator.checkField)
        .on('change', 'select.required', validator.checkField)
        .on('keypress', 'input[required][pattern]', validator.keypress);

    $('.multi.required')
        .on('keyup blur', 'input', function () {
            validator.checkField.apply($(this).siblings().last()[0]);
        });

    // bind the validation to the form submit event
    //$('#send').click('submit');//.prop('disabled', true);

    $('form').submit(function (e) {
        e.preventDefault();

        var submit = true;
        // evaluate the form using generic validaing
        if (!validator.checkAll($(this))) {
            submit = false;
        }

        if (submit) {
            NProgress.start();
            this.submit();
        }
        else {
            new PNotify({
                title: "Formulaire incomplet",
                type: "error",
                text: "Veuillez vérifier le formulaire et saisir les champs obligatoires.",
                nonblock: {
                    nonblock: true
                }
            });

        }

        return false;
    });


</script>
<script type="text/javascript">
    $(function () {

        $('#StartDate').datetimepicker({
            format: 'd/MM/YYYY',
            icons: {
                date: "fa fa-calendar",
                up: "fa fa-arrow-up",
                down: "fa fa-arrow-down"
            }
        });
        $('#EndDate').datetimepicker({
            useCurrent: false, //Important! See issue #1075
            format: 'd/MM/YYYY',
            icons: {
                date: "fa fa-calendar",
                up: "fa fa-arrow-up",
                down: "fa fa-arrow-down"
            }
        });
        $("#StartDate").on("dp.change", function (e) {
            $('#EndDate').data("DateTimePicker").minDate(e.date);
        });
        $("#EndDate").on("dp.change", function (e) {
            $('#StartDate').data("DateTimePicker").maxDate(e.date);
        });


    });
</script>

<script language="javascript" type="text/javascript">
    $(function () {

        $("#Colors").hide();
        $("#ColorIdentifier").attr("readonly", true);
        $("#ChoixCouleur").click(function () {
            var html = $("#Colors").html();
            if (html.trim() == '') {
                $.get("http://localhost:6650/api/Colors", null, function (data) {
                    $("#Colors").html(data);
                });
                $(document).on('click', 'td', function () {
                    $("#ColorIdentifier").val($(this).attr("bgcolor"));
                    $("#Colors").toggle();
                });

                $(document).on('mouseover', 'td', function () {
                    $("#ColorIdentifier").css("background-color", $(this).css("background-color"));
                    $(this).css("cursor", "pointer");
                });
            }
            $("#Colors").toggle();
        });

    });
</script>

