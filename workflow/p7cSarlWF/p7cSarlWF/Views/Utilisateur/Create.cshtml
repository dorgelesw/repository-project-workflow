                                    <input id="LastName" class="form-control col-md-7 col-xs-12" name="LastName" placeholder="Prénom de l'utilisateur" required="required" type="text">
                                    @Html.ValidationMessageFor(model => model.LastName)
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">
                                    Email <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="email" id="email" name="email" required="required" class="form-control col-md-7 col-xs-12" placeholder="Email de l'utilisateur">
                                    @Html.ValidationMessageFor(model => model.email)
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">
                                    Confirmer Email <span class="required">*</span>
                                </label>
