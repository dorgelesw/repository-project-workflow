                                        <input type="text" class="form-control col-md-7 col-xs-12 has-feedback-left profil" name="Googleplus" id="Googleplus" placeholder="Googleplus" />
                                        <span class="fa fa-google-plus form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                </div>
                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Linkedin"></label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input type="text" class="form-control col-md-7 col-xs-12 has-feedback-left profil" name="Linkedin" id="Linkedin" placeholder="LinkedIn" />
                                        <span class="fa fa-linkedin form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                </div>
                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Skype"></label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input type="text" class="form-control col-md-7 col-xs-12 has-feedback-left profil" name="Skype" id="Skype" placeholder="Skype ID" />
                                        <span class="fa fa-skype form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                </div>
                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Twitter"></label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input type="text" class="form-control col-md-7 col-xs-12 has-feedback-left profil" name="Twitter" id="Twitter" placeholder="Twitter ID" />
                                        <span class="fa fa-twitter form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                </div>
                            </div>
                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-6 col-md-offset-3">
                                <button type="submit" class="btn btn-primary">Annuler</button>
                                <button id="send" type="submit" class="btn btn-success">Enregistrer</button>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>
    
@section script{
<script src="~/Scripts/js/validator/validator.js"></script>
<script src="~/Scripts/js/select/select2.full.js"></script>
<script src="~/Scripts/js/textarea/autosize.min.js"></script>
<script src="~/Scripts/js/autocomplete/countries.js"></script>
<script src="~/Scripts/js/autocomplete/jquery.autocomplete.js"></script>
    <script>
        autosize($('.resizable_textarea'));
        $(document).ready(function () {

            $(".select_civilite").select2({
                placeholder: "Choisir la civilité",
                allowClear: true
            });            
        });
        function getFormData($form) {
            var unindexed_array = $form.serializeArray();
            var indexed_array = {};
            $.map(unindexed_array, function (n, i) {
                indexed_array[n['name']] = n['value'];
            });
            return indexed_array;
        }
    </script>



    <script>
        // initialize the validator function
        validator.message['date'] = 'not a real date';
        // validate a field on "blur" event, a 'select' on 'change' event & a '.reuired' classed multifield on 'keyup':
        $('form')
            .on('blur', 'input[required], input.optional, select.required', validator.checkField)
            .on('change', 'select.required', validator.checkField)
            .on('keypress', 'input[required][pattern]', validator.keypress);

        $('.multi.required')
            .on('keyup blur', 'input', function () {
                validator.checkField.apply($(this).siblings().last()[0]);
            });

        // bind the validation to the form submit event
        //$('#send').click('submit');//.prop('disabled', true);

        $('form').submit(function (e) {
            e.preventDefault();
            
            var submit = true;
            // evaluate the form using generic validaing
            if (!validator.checkAll($(this))) {
                submit = false;
            }

            if (submit) {
                NProgress.start();
                var prof = $(".profil");
                var profil = getFormData(prof);
                console.log(profil);
                if ($('#ProfilID').val() == '') {
                    $.post("http://localhost:6650/api/Profils", profil, function (data) {
                        $('#ProfilID').val(data.ProfilID);
                    }).done(function () {
                    })
                    .fail(function () {
                    })
                    .always(function () {
                        //ici je vais mettre le code pour cacher l'image loader
                        NProgress.done();
                    });
                }                
                this.submit();
            }
            else {
                new PNotify({
                    title: "Formulaire incomplet",
                    type: "error",
                    text: "Veuillez vérifier le formulaire et saisir les champs obligatoires.",
                    nonblock: {
                        nonblock: true
                    }
                });

            }
                
            return false;
        });

        
    </script>

}